@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new {@class="form-control"})
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /> <br />
        @Html.Label("Kategori Açıklaması")
        @Html.TextBoxFor(x => x.CategoryDespcription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryDespcription)
        <br /> <br />
        <button class="btn btn-info" id="btn1">Kaydet</button>
    </div>

}
<script>
    $('#btn1').click(function () {
        swal({
            title: "Tebrikler!",
            text: "Kategori başarılı bir şekilde eklendi.",
            buttons = false,
            icon: "info",
            timer: 6000
        }).then(function () {
            window.location.reload(true);
            tr.hide();
        });
    });
</script>

